.row
  .col-xs-4
    =form_for(@user, url: user_path(@user.permalink), method: :put) do |f|
      .panel.panel-default
        .panel-heading
          Edit user details
        .panel-body
          %table.table
            %tr
              %th First name
              %td
                = f.text_field :first_name
            %tr
              %th Last name
              %td
                = f.text_field :last_name
          %tr
            %th
            %td
              = f.submit 'Save', :class => 'btn btn-primary btn-sm'
